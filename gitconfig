[core]
    excludesfile = ~/.gitignore_global
    editor = vi

[color]
    diff = auto
    status = auto
    branch = auto

[push]
    default = simple

[merge]
    tool = vimdiff

[include]
    path = ~/.gitconfig_local

[alias]
    ci = commit
    st = status
    in = !git fetch && git log ..origin/master
    out = !git fetch && git log origin/master..

